                </tbody>



            </table>
        </div>
   




    <input class="btn btn-primary" type="submit">

    <a asp-controller="Student" asp-action="index" class="btn btn-danger">Back</a>
</form>


<script>
    $(document).ready(function () {

        $('#RollNo').on("change", function () {
            
            var rollNo = $(this).val();
            var rollNo1 = $("#RollNo").val();
            if (rollNo < 0 || rollNo > 100) {
                alert("Roll Number must be between 0 and 100");
            }
        });
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });
</script>

