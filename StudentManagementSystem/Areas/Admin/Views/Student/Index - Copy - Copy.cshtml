@model IEnumerable<StudentRecord>

@{
    ViewBag.Title = "Student List";
    int sn = 0;
    //var photoPath = "";

}






@*<div class="col-md-12">
        <span class="col-md-6"><h1>student List</h1></span>
        <span class="text-right col-md-6">
        </span>
    </div>*@

<div class="text-right">

    <h1 class="d-inline">@ViewBag.Title</h1>


    <div class="float-right text-right col-sm-6 d-inline p-2">

        <a asp-controller="student" asp-action="create" class="btn btn-primary">Create</a>

    </div>

</div>



<table class="table table-bordered table-responsive table-hover" id="myTable">
    <thead>
        <tr>
            <th>S.N.</th>
            <th>RollNo</th>
            @*<th>Image</th>*@
            <th>Name</th>
            <th>Address</th>
            <th>Class</th>
            <th>BloodGroup</th>
            <th>MobileNumber</th>
            <th>Birthdate</th>
            <th>Gender</th>
            <th>Action</th>

        </tr>
    </thead>



    <tbody>
        @foreach (var student in Model)
        {

            //photoPath = "~/images/" + (student.PhotoPath ?? "employee_pic.jpg");

            sn = sn + 1;
            <tr>
                <td>@sn</td>
                <td>@student.RollNo</td>
               @* <td>
                    <img src=@photoPath asp-append-version="true" height="20" width="20" />
                </td>*@
                <td>@student.FirstName @student.MiddleName @student.LastName</td>
                <td>@student.Address</td>
                <td>@student.Class</td>
                <td>@student.BloodGroup</td>
                <td>@student.MobileNumber</td>
                <td>@student.BirthDate.Date.ToString("yyyy-MM-dd")</td>
                <td>@student.Gender</td>


                <td class="p-0 m-0 row">

                    <a asp-controller="student" asp-action="edit" asp-route-id="@student.Id" class="col-sm-4">

                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16">
                            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z" />
                        </svg>
                    </a>
                    <a asp-controller="student" asp-action="delete" asp-route-id="@student.Id" class="col-sm-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z" />
                        </svg>
                    </a>
                    <a asp-controller="student" asp-action="details" asp-route-id="@student.Id" class="col-sm-4">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                        </svg>
                    </a>
                </td>
            </tr>


        }

    </tbody>

</table>


<script>

    $(document).ready(function () {

        $("#myTable").DataTable();
    })
</script>
