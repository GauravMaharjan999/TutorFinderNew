@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "List Users";
}

@{ Layout = ViewBag.Layout; }

<!-- Breadcubs Area Start Here -->
<div class="breadcrumbs-area">
    <h3>User</h3>
    <ul>
        <li>
            <a href="index.html">Home</a>
        </li>
        <li>Users</li>
    </ul>
</div>
<!-- Admit Form Area Start Here -->
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>User Details</h3>
            </div>
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                   aria-expanded="false">...</a>

                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" asp-action="index" asp-controller="student"  data-ajax="true"
                               data-ajax-method="GET" data-ajax-mode="replace"
                               data-ajax-update="#main-div">
                        <i class="fas fa-times text-orange-red"></i>Close
                    </a>
                    @*<a class="dropdown-item" href="#">
                            <i class="fas fa-cogs text-dark-pastel-green"></i>Edit
                        </a>*@
                    <a class="dropdown-item" asp-action="index" asp-controller="student" data-ajax="true"
                               data-ajax-method="GET" data-ajax-mode="replace"
                               data-ajax-update="#main-div">
                        <i class="fas fa-redo-alt text-orange-peel"></i>Refresh
                    </a>
                </div>
            </div>
        </div>


        <div class="col-md-9">


            @if (Model.Any())
            {
                <div class="table-responsive col-md-6 border">
                    <table class="table display data-table text-nowrap" id="myTable">
                        <thead>
                            <tr>

                                <th>User Name</th>
                                <th>Action</th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)

                            {
                                <tr>

                                    <td>@user.Email</td>



                                    <td>
                                        <div class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                               aria-expanded="false">
                                                <span class="flaticon-more-button-of-three-dots"></span>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right">


                                                <a class="dropdown-item" asp-controller="user" asp-action="details" asp-route-id="@user.Id"  data-ajax="true"
                               data-ajax-method="GET" data-ajax-mode="replace"
                               data-ajax-update="#main-div">
                                                    <i class="fas fa-redo-alt text-orange-peel"></i> Detail
                                                </a>
                                                <a class="dropdown-item" asp-controller="user" asp-action="delete" asp-route-id="@user.Id"  data-ajax="true"
                               data-ajax-method="GET" data-ajax-mode="replace"
                               data-ajax-update="#main-div">

                                                    <i class="fas fa-times text-orange-red"></i> Delete
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            }
        </div>


    </div>
</div>



@if (ViewBag.CreateUserStatus == true)
{
    <script>
    iziToast.success({
            title: 'Success',
            message: 'Successfully User Created',
        });</script>
}