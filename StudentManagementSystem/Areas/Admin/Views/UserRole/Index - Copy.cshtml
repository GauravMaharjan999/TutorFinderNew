@model IEnumerable<UserRoleViewModel>
@{
    var sn = 0;



}
@{ Layout = ViewBag.Layout; }


<link href="~/css/FancyTable.css" rel="stylesheet" />
<!-- Breadcubs Area Start Here -->
<div class="breadcrumbs-area">
    <h3>User Role</h3>
    <ul>
        <li>
            <a asp-controller="UserRole" asp-action="Index">Home</a>
        </li>
        <li>Index</li>
    </ul>
</div>
<!-- Breadcubs Area End Here -->
<div class="card height-auto">
    <div class="card-body">
        <div class="heading-layout1">
            <div class="item-title">
                <h3>All Users</h3>
            </div>
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" data-toggle="dropdown"
                   aria-expanded="false">...</a>

                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" asp-action="index" asp-controller="student">
                        <i class="fas fa-times text-orange-red"></i>Close
                    </a>
                    @*<a class="dropdown-item" href="#">
                            <i class="fas fa-cogs text-dark-pastel-green"></i>Edit
                        </a>*@
                    <a class="dropdown-item">
                        <i class="fas fa-redo-alt text-orange-peel"></i>Refresh
                    </a>
                </div>
            </div>
        </div>


        <div class="table-responsive">
            <table class="table display data-table text-nowrap" id="myTable">
                <thead>
                    <tr>

                        <th>User Name</th>
                        <th>Action</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)

                    {

                        <tr>

                            <td data-toggle="right" title="@user.ConcatRoleName">@user.UserName</td>


                            <td>
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                       aria-expanded="false">
                                        <span class="flaticon-more-button-of-three-dots"></span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">

                                        <a class="dropdown-item" asp-controller="user" asp-action="details" asp-route-id="@user.UserId" data-ajax="true"
                           data-ajax-method="GET" data-ajax-mode="replace" data-ajax-loading="#loader"
                           data-ajax-update="#main-div">
                                            <i class="fas fa-redo-alt text-orange-peel"></i> Detail
                                        </a>
                                        <a class="dropdown-item" asp-controller="user" asp-action="delete" asp-route-id="@user.UserId" data-ajax="true"
                           data-ajax-method="GET" data-ajax-mode="replace" data-ajax-loading="#loader"
                           data-ajax-update="#main-div">

                                            <i class="fas fa-times text-orange-red"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>


                        </tr>
                    }


                </tbody>
            </table>
        </div>


    </div>
</div>

@if (ViewBag.RoleAssignStatus == true)
{
    <script>
    iziToast.success({
            title: 'Success',
            message: 'Successfully Role Assigned',
        });</script>
}