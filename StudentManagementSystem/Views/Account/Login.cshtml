@model LoginViewModel

@{ ViewBag.Title = "User Login"; }
@{ var result = ""; }

<link href="~/css/LoginPage.css" rel="stylesheet" />
<div class="login-page-wrap">
    <div class="login-page-content">
        <div class="login-box" accesskey="">
            <div class="item-logo">
                <img src="~/akkor/img/login.png" alt="logo" width="120" height="70">
            </div>

            <form method="post" class="login-form">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" placeholder="Enter Email" class="form-control">
                    <i class="far fa-envelope"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">


                    <label asp-for="Password"></label>
                    <i class="fas fa-eye-slash" id="togglePassword"></i>
                    <input asp-for="Password" placeholder="Enter password" class="form-control">

                    <span asp-validation-for="Password" class="text-danger"></span>

                </div>
                @*

                    <div class="input-group mb-2 mr-sm-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-eye-slash" id="eye"></i></div>
                        </div>
                        <input type="password" class="form-control" id="password" placeholder="Type Your Password">
                    </div>

                *@



                <div class="form-group d-flex align-items-center justify-content-between">
                    <div class="form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="remember-me">
                        <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                        @*<div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>*@
                    </div>








                    <a href="/account/forgotpassword" class="forgot-btn">Forgot Password?</a>
                </div>
                <div class="form-group">
                    <button type="submit" class="login-btn">Login</button>
                </div>
                <div class="sign-up" style="color: red">Don't have an account ? <a asp-controller="Account" asp-action="Register" style="color: blue">Signup now!</a></div>



            </form>
            @if (ViewBag.LoginError != null)
            {
                result = "Error";
            }@*<div class="login-social">
                    <p>or sign in with</p>
                    <ul>
                        <li><a href="#" class="bg-fb"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="#" class="bg-twitter"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="#" class="bg-gplus"><i class="fab fa-google-plus-g"></i></a></li>
                        <li><a href="#" class="bg-git"><i class="fab fa-github"></i></a></li>
                    </ul>
                </div>*@
        </div>

    </div>

</div>




