                    <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id" class="btn btn-success">Edit</a>
                    <a asp-controller="home" asp-action="delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>

                </td>
            </tr>



        }

