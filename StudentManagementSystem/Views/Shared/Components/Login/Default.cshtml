@model LoginViewModel
<div class="login_form">
    <form action="/Account/Login" method="post" ajax-request="true">
        <div class="heading">
            <h3 class="text-center">Login to your account</h3>
            <p class="text-center">Don't have an account? <a class="text-thm" href="#">Sign Up!</a></p>
        </div>
        <div class="form-group">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email Address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" placeholder="Enter password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group custom-control custom-checkbox">
            <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
            <label class="custom-control-label" for="exampleCheck1">Remember me</label>
            <a class="tdu btn-fpswd float-right" href="#">Forgot Password?</a>
        </div>
        <button type="submit" id="loginsubmit" class="btn btn-log btn-block btn-thm2">Login</button>
        <hr>
        <div class="row mt40">
            <div class="col-lg">
                <button type="submit" class="btn btn-block color-white bgc-fb"><i class="fa fa-facebook float-left mt5"></i> Facebook</button>
            </div>
            <div class="col-lg">
                <button type="submit" class="btn btn-block color-white bgc-gogle"><i class="fa fa-google float-left mt5"></i> Google</button>
            </div>
        </div>
    </form>
</div>